{
  "name": "signlab",
  "version": "0.0.1",
  "scripts": {
    "start:dev": "npm run build:dev --workspace=client && npm run start:dev --workspace=server",
    "start:watch": "concurrently 'npm run start:watch --workspace=server' 'npm run start:watch --workspace=client'",
    "build:prod": "npm run build:prod --workspaces --if-present",
    "start:prod": "npm run start:prod --workspace=server",
    "lint": "npm run lint --workspaces --if-present"
  },
  "workspaces": [
    "server",
    "client",
    "shared"
  ],
  "devDependencies": {
    "@types/cypress": "^1.1.3",
    "@types/mocha": "^9.1.1",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "cypress": "^10.7.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0"
  },
  "dependencies": {
    "concurrently": "^7.4.0"
  }
}
