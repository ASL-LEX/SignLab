<div class="container-fluid h-100">
  <div class="row h-100">
    {{>dashboardNav}}
    <div class="col-sm-9 col-md-10">
      <div style="padding: 30px">
        <h3>Edit Token</h3>
        <hr>
        <div class="card">
          <div style="padding: 20px">
            <form id="form">
              <div id="formFields"></div>
              <div>
                <div class="btn-group" data-toggle="buttons">
                  <label class="btn" id="activeLabel">
                    <input id="active" type="radio" name="active" value="true" autocomplete="off"> Active
                  </label>
                  <label class="btn" id="inactiveLabel">
                    <input id="inactive" type="radio" name="active" value="false" autocomplete="off"> Inactive
                  </label>
                </div>
              </div>
              <br>
              <button id="update" type="submit" class="btn btn-primary">Update</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<script type="text/javascript" src="/public/scripts/tokens/edit.js"></script>
<script>
  joiFormValue('tokenName', '{{token.tokenName}}');
  if({{token.active}}) {
      $('#activeLabel').addClass('btn-success');
      $('#inactiveLabel').addClass('btn-secondary');
      $("#active").prop("checked", true);
  } else {
    $('#activeLabel').addClass('btn-secondary');
    $('#inactiveLabel').addClass('btn-danger');
    $("#inactive").prop("checked", true)
  }
</script>
